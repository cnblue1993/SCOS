<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout  
        android:id="@+id/ly_switch"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal"   
        android:baselineAligned="false"  
        >  
  
        <LinearLayout  
            android:id="@+id/ly_cold"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_weight="1"  
            android:gravity="center"  
            android:orientation="horizontal"  
            android:padding="5dip" >  
  
            <TextView  
                android:id="@+id/tv_cold"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:gravity="center"  
                android:text="@string/cold"  
                android:textColor="#0000FF"  
                android:textSize="20sp" />  
        </LinearLayout>  
  
        <LinearLayout  
            android:id="@+id/ly_hot"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_weight="1"  
            android:clickable="true"  
            android:gravity="center"  
            android:orientation="horizontal"  
            android:padding="5dip"  
            android:saveEnabled="false" >  
  
            <TextView  
                android:id="@+id/tv_hot"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:gravity="center"  
                android:text="@string/hot"  
                android:textColor="#000000"  
                android:textSize="20sp" />  
        </LinearLayout>  
  
        <LinearLayout  
            android:id="@+id/ly_sea"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_weight="1"  
            android:focusable="false"  
            android:gravity="center"  
            android:orientation="horizontal"  
            android:padding="5dip" >  
  
            <TextView  
                android:id="@+id/tv_sea"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:gravity="center"  
                android:text="@string/sea"  
                android:textColor="#000000"  
                android:textSize="20sp" />  
        </LinearLayout>    
    
    <LinearLayout  
            android:id="@+id/ly_drink"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_weight="1"  
            android:focusable="false"  
            android:gravity="center"  
            android:orientation="horizontal"  
            android:padding="5dip" >  
  
            <TextView  
                android:id="@+id/tv_drink"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:gravity="center"  
                android:text="@string/drink"  
                android:textColor="#000000"  
                android:textSize="20sp" />  
        </LinearLayout>  
    </LinearLayout> 
    <ImageView  
        android:id="@+id/id_tab_line_iv"  
        android:layout_width="80dp"  
        android:layout_height="5dp"  
        android:contentDescription="tab"  
        android:background="@drawable/tab_selected_pressed_holo" >  
    </ImageView>  
  
    <View  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#000000" />

</LinearLayout>
