<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <item android:state_checkable="true">          
        <shape>  
            <gradient  
                android:startColor="#090909"
                android:endColor="#090909"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#fad3cf" />  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
 <item android:state_checkable="false" >  
        <shape>  
            <gradient  
                android:startColor="#f9f9f9"  
                android:endColor="#f9f9f9"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#dcdcdc" />  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item> 
</selector>
